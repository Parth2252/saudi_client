        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@id='header_right_group']" position="after">
                <group>
                    <field name="opportunity_id" />
                </group>
            </xpath>

        </field>
    </record>
</odoo>
