<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.vendor.product</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                <field name="vendor_product_name" column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       groups="l4l_product_vendor_code.l4l_group_vendor_product_code"/>
                <field name="vendor_product_code" column_invisible="parent.move_type not in ('in_invoice', 'in_refund')"
                       groups="l4l_product_vendor_code.l4l_group_vendor_product_code"/>
            </xpath>
        </field>
    </record>
</odoo>



