<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l4l_view_product_template_search_inherit" model="ir.ui.view">
        <field name="name">l4l.view.product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="variant_seller_ids" invisible="1"/>
                <field name="vendor_product_code" groups="l4l_product_vendor_code.l4l_group_vendor_product_code" filter_domain="[('variant_seller_ids.product_code', 'ilike', self)]"/>
                <field name="vendor_product_name" groups="l4l_product_vendor_code.l4l_group_vendor_product_code" filter_domain="[('variant_seller_ids.product_name', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>




