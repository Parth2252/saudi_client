<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_payment_receipt" model="ir.ui.view">
        <field name="name">account.move.form.payment.receipt</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_print_payment_receipt"
                        type="object"
                        string="Print Payment Receipt"
                        class="btn-primary"
                        invisible="payment_state != 'paid' or move_type != 'in_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>
