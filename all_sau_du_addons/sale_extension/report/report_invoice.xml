<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="arabic_english_invoice_info_bilingual" inherit_id="l10n_gcc_invoice.arabic_english_invoice">
        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations" class="pb-3">
                <div class="row">

                    <div class="col-6">
                        <p>
                            <strong style="color:#b37200;">اسم العميل:</strong>
                            <br/>
                            <strong>Customer Name:</strong>
                            <br/>
                            <span t-esc="o.partner_id.name"/>
                        </p>

                        <p>
                            <strong style="color:#b37200;">عنوان العميل:</strong>
                            <br/>
                            <strong>Customer Address:</strong>
                            <span t-field="o.partner_id"
                                  t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </p>
                    </div>

                    <div class="col-6">
                        <p>
                            <strong style="color:#b37200;">تاريخ الفاتورة:</strong>
                            <strong>Invoice Date:</strong>
                            <span t-field="o.invoice_date"/>
                            <t t-if="o.invoice_date">
                                <span t-esc="o.invoice_date.strftime('%H:%M:%S')"/>
                            </t>
                        </p>

                        <p t-if="o.invoice_date_due">
                            <strong style="color:#b37200;">تاريخ الاستحقاق:</strong>
                            <strong>Due Date:</strong>
                            <span t-field="o.invoice_date_due"/>
                        </p>

                        <p t-if="o.delivery_date">
                            <strong style="color:#b37200;">تاريخ التوصيل:</strong>
                            <strong>Delivery Date:</strong>
                            <span t-field="o.delivery_date"/>
                        </p>

                        <p t-if="o.invoice_origin">
                            <strong style="color:#b37200;">المصدر:</strong>
                            <strong>Source:</strong>
                            <span t-esc="o.invoice_origin"/>
                        </p>

                        <p t-if="o.ref">
                            <strong style="color:#b37200;">رقم الإشارة:</strong>
                            <strong>Reference:</strong>
                            <span t-esc="o.ref"/>
                        </p>
                        <p t-if="o.user_id">
                            <strong style="color:#b37200;">مندوب المبيعات:</strong>
                            <strong>Salesperson:</strong>
                            <span t-esc="o.user_id.name"/>
                        </p>

                    </div>

                </div>
            </div>
        </xpath>


    </template>

</odoo>
