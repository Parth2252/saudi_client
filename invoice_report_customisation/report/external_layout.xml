    <template id="l10n_sa.l10n_sa_external_layout_standard" inherit_id="web.external_layout_standard">
        <!--  for custom header -->
        <xpath expr="//img" position="after">
            <t t-if="custom_header_sa" t-out="custom_header_sa"/>
        </xpath>
    </template>


