<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_account_move_send_form_ext">
            <field name="name">Account Move Send Form Ext</field>
            <field name="model">account.move.send.wizard</field>
            <field name="inherit_id" ref="account.account_move_send_wizard_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='mail_subject']" position="after">
                        <field name="is_cc" invisible="1"/>
                        <field name="is_bcc" invisible="1"/>
                        <field name="is_reply" invisible="1"/>
                        <field name="cc_partner_ids" widget="many2many_tags"
                               placeholder="Add CC contacts to notify" domain="[('is_company', '=', True)]"
                               invisible="not is_cc"/>
                        <field name="bcc_partner_ids" widget="many2many_tags"
                               placeholder="Add BCC contacts to notify" domain="[('is_company', '=', False)]"
                               invisible="not is_bcc"/>
                        <field name="rply_partner_id" context="{'force_email':True, 'show_email':True}"
                               invisible="not is_reply"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>  