<odoo>
    <record id="delivery_restriction_account_move_form_inherit" model="ir.ui.view">
        <field name="name">delivery.restriction.account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[@id='header_right_group']/div[@name='journal_div']" position="before">
                <field name="gr_number" invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>

    <record id="delivery_restriction_account_move_search_invoice_inherit" model="ir.ui.view">
        <field name="name">delivery.restriction.account.move.search.invoice.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='ref']" position="before">
                <field name="gr_number" />
            </xpath>
        </field>
    </record>
</odoo>
