<odoo>
    <record id="view_move_form_inherit_discount_type" model="ir.ui.view">
        <field name="name">account.move.discount.type.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='discount']" position="before">
                <field name="discount_type" optional="hide"/>
                <field name="fixed_discount_value" string="Disc." width="50px" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='discount']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>