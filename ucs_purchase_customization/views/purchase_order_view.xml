<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_purchase_order_form" model="ir.ui.view">
      <field name="name">purchase.purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="after">
                <div class="float-end d-flex gap-1 mb-2 ms-1" name="so_button_below_order_lines">
                     <button string="Discount"
                            name="action_open_discount_wizard"
                            type="object"
                            class="btn btn-secondary"/>
                </div>
            </xpath>
      </field>
    </record>
</odoo>
